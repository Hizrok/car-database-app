<div class="container">
    <h1>NEW CAR</h1>
    <form action="/new" method="POST">
        <div class="form-group">
            <label>Brand</label>
            <input required type="text" class="form-control" area name="car_brand">
        </div>
        <div class="form-group">
            <label>Model</label>
            <input required type="text" class="form-control" name="car_model">
        </div>
        <div class="form-group">
            <label>Year</label>
            <input required type="number" min="1900" max="2099" class="form-control" name="car_model_year">
        </div>
        <a href="/" class="btn btn-primary">Cancel</a>
        <button type="submit" class="btn btn-danger">Create new</button>
    </form>
</div>